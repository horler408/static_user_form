<%- include('partials/header'); -%>     
   
    <section class="wrapper">
        <div class="success"><%= typeof msg != 'undefined' ? msg : '' %></div>
        <div class="failure"><%= typeof error != 'undefined' ? error : '' %></div>
        <form class="form-container" action="/api/auth/register" method="POST">
                <h1>Create Account</h1>
                <%- include('partials/messages'); -%>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
            
                <div class="name">
                    <label for="fname">
                        First Name
                        <input type="text" name="first_name" id="fname" required
                        value="<%= typeof first_name != 'undefined'? first_name : ''  %>"
                        >
                    </label>
                    <label for="lname">
                        Last Name
                        <input type="text" name="last_name" id="lname" required
                        value="<%= typeof last_name != 'undefined'? last_name : ''  %>"
                        >
                    </label>
                </div>
                <div class="email">
                    <label for="email">
                        Email
                        <input type="email" name="email" id="email" required
                        value="<%= typeof email != 'undefined'? email : ''  %>"
                        >
                    </label>
                    <label for="phone">
                        Phone Number
                        <input type="text" name="phone" id="phone" required
                            value="<%= typeof phone != 'undefined'? phone : ''  %>"
                        >
                    </label>
                    <label for="role">
                        Type of User
                        <input type="text" name="role" id="role" required
                            value="<%= typeof role != 'undefined'? role : ''  %>"
                        >
                    </label>
                </div>
                
                <div class="password">
                    <label for="pswd">
                        Password
                        <input type="password" name="password" id="pswd" required
                            value="<%= typeof password != 'undefined'? password : ''  %>"
                        >
                    </label>  
                    <label for="confirm-pswd">
                        Password
                        <input type="password" name="confirm_password" id="confirm-pswd" required>
                    </label>
                </div>

                <button class="submit-btn" type="submit">Sign up</button>
            </form>
    <p>Already registered ? <a href="/api/auth/login">Login</a></p>
    <p>Return to <a href="/">home</a></p>
</section>

<%- include('partials/footer'); -%>